generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Models
model User {
  id           Int           @id @default(autoincrement())
  username     String        @unique
  email        String        @unique
  password     String?
  role         Role          @default(STANDARD)
  locale       String        @default("en") // "en" or "es"
  createdAt    DateTime      @default(now())
  links        Link[]
  subscription Subscription?
  auditLogs    AuditLog[]
  oauthProvider String?
  oauthId       String?

  @@unique([oauthProvider, oauthId])
}

model GuestSession {
  id         Int     @id @default(autoincrement())
  createdAt  DateTime @default(now())
  links      Link[]
}

model Subscription {
  id                   Int                @id @default(autoincrement())
  userId               Int                @unique
  user                 User               @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Stripe data (optional, filled when Stripe is integrated)
  stripeCustomerId     String?            @unique
  stripeSubscriptionId String?            @unique
  stripePriceId        String?

  // Status
  status               SubscriptionStatus @default(INACTIVE)
  currentPeriodEnd     DateTime?
  cancelAtPeriodEnd    Boolean            @default(false)

  // Reconciliation & Sync tracking
  lastSyncedAt         DateTime?          // Last successful sync with Stripe API
  lastEventId          String?            // Last Stripe event ID processed for this subscription
  metadata             Json?              // Additional flexible data

  createdAt            DateTime           @default(now())
  updatedAt            DateTime           @updatedAt

  @@index([userId])
  @@index([stripeCustomerId])
  @@index([status, currentPeriodEnd])    // For finding expired subscriptions
}

model Link {
  id          Int     @id @default(autoincrement())
  userId      Int?
  guestSessionId Int?
  shortUrl    String  @unique
  longUrl     String
  status      Boolean @default(true)
  accessCount Int     @default(0)
  createdAt   DateTime @default(now())

  user        User? @relation(fields: [userId], references: [id])
  guestSession GuestSession? @relation(fields: [guestSessionId], references: [id])
  accesses Access[]
  rules       LinkRule[]
  qrConfig    QRConfig?

  @@index([shortUrl])
}

model Access {
  id          Int      @id @default(autoincrement())
  linkId      Int
  createdAt   DateTime @default(now())
  userAgent   String
  ip          String
  country     String
  isVPN       Boolean
  isBot       Boolean
  source      String   @default("direct")

  link        Link @relation(fields: [linkId], references: [id], onDelete: Cascade)

  @@index([linkId])
  @@index([linkId, createdAt])
  @@index([linkId, source])
}

model LinkRule {
  id          Int             @id @default(autoincrement())
  linkId      Int
  link        Link            @relation(fields: [linkId], references: [id], onDelete: Cascade)
  name        String?
  priority    Int             @default(0)
  enabled     Boolean         @default(true)
  match       MatchType       @default(AND)
  conditions  RuleCondition[]

  actionType      ActionType
  actionSettings  Json?

  elseActionType      ActionType?
  elseActionSettings  Json?

  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt

  @@index([linkId, priority])
  @@index([linkId, enabled])
}

model RuleCondition {
  id         Int           @id @default(autoincrement())
  ruleId     Int
  rule       LinkRule      @relation(fields: [ruleId], references: [id], onDelete: Cascade)
  field      FieldType
  operator   OperatorType
  value      Json

  @@index([ruleId])
}

// Enums
enum MatchType {
  AND
  OR
}

enum FieldType {
  country
  device
  ip
  is_bot
  is_vpn
  date
  access_count
}

enum OperatorType {
  equals
  not_equals
  in
  not_in
  greater_than
  less_than
  before
  after
  contains
  not_contains
}

enum ActionType {
  redirect
  block_access
  notify
  password_gate
}

enum Role {
  STANDARD
  PRO
}

enum SubscriptionStatus {
  ACTIVE
  CANCELED
  PAST_DUE
  INACTIVE
  TRIALING
}

enum AuditEventType {
  SUBSCRIPTION_CREATED
  SUBSCRIPTION_UPGRADED
  SUBSCRIPTION_DOWNGRADED
  SUBSCRIPTION_CANCELED
  PAYMENT_FAILED
}

enum EventStatus {
  PENDING      // Just received, not processed yet
  PROCESSING   // Currently being processed
  PROCESSED    // Successfully processed
  FAILED       // Failed but will retry
  DEAD_LETTER  // Failed too many times, manual intervention needed
}

// Audit Log for critical subscription events
model AuditLog {
  id        Int            @id @default(autoincrement())
  userId    Int
  user      User           @relation(fields: [userId], references: [id], onDelete: Cascade)

  eventType AuditEventType
  eventData Json           // Details specific to the event
  metadata  Json?          // Additional info (IP, webhookId, etc.)

  createdAt DateTime       @default(now())

  @@index([userId])
  @@index([eventType])
  @@index([createdAt])
}

// Stripe Event Sourcing - Every webhook is stored here
model StripeEvent {
  id              Int          @id @default(autoincrement())
  stripeEventId   String       @unique // e.g., "evt_1ABC123..."
  type            String       // e.g., "customer.subscription.updated"
  payload         Json         // Full webhook payload from Stripe

  // Processing status
  status          EventStatus  @default(PENDING)
  attempts        Int          @default(0)
  processedAt     DateTime?    // When successfully processed
  lastAttemptAt   DateTime?    // Last processing attempt
  error           String?      // Error message if failed

  createdAt       DateTime     @default(now())

  @@index([stripeEventId])
  @@index([status])
  @@index([type])
  @@index([createdAt])
  @@index([status, lastAttemptAt]) // For finding stuck events
}

// QR Code configuration for links
model QRConfig {
  id              Int           @id @default(autoincrement())
  linkId          Int           @unique
  link            Link          @relation(fields: [linkId], references: [id], onDelete: Cascade)
  foregroundColor String        @default("#000000")
  backgroundColor String        @default("#FFFFFF")
  logoUrl         String?
  logoSize        Float         @default(0.3)
  dotsStyle       DotsStyle     @default(square)
  cornersStyle    CornersStyle  @default(square)
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  @@index([linkId])
}

enum DotsStyle {
  square
  rounded
  dots
}

enum CornersStyle {
  square
  rounded
}